{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "SOCKET_PORT",
    "SOCKET_ORIGIN",
    "TEST_TRACK_OWNER_PKEY",
    "OASIS_CONTRACT_ADDRESS"
  ]
}
