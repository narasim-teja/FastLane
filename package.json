{
  "name": "fastlane",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "fmt": "turbo fmt --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "fmt:check": "turbo fmt --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "type-check": "turbo type-check",
    "lint:ws": "bunx sherif@latest",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "postinstall": "bun lint:ws",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@fastlane/prettier-config": "*",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.1",
    "turbo": "latest",
    "typescript": "^5.4.5"
  },
  "prettier": "@fastlane/prettier-config",
  "lint-staged": {
    "*.{ts,tsx,md,mdx}": [
      "bun fmt"
    ],
    "*.{ts,tsx,mdx}": [
      "bun lint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "bun@1.1.12",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ]
}
