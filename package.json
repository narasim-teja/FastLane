{
  "name": "fastlane",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "fmt": "prettier --write \"**/*.{ts,tsx,mdx,json}\" --cache --experimental-ternaries",
    "fmt:check": "prettier --check \"**/*.{ts,tsx,mdx,json}\" --cache --experimental-ternaries",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastlane/ui": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@fastlane/eslint-config": "*",
    "@fastlane/prettier-config": "*",
    "@fastlane/tailwind-config": "*",
    "@fastlane/typescript-config": "*",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.1",
    "turbo": "latest"
  },
  "packageManager": "bun@1.1.12",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prettier": "@fastlane/prettier-config",
  "lint-staged": {
    "*.{ts,tsx,md,mdx}": [
      "prettier --write \"**/*.{ts,tsx,mdx}\" --cache --experimental-ternaries"
    ],
    "*.{ts,tsx,mdx}": [
      "eslint --fix ."
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
